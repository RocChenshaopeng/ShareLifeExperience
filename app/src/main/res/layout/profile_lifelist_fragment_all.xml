<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.projection.sharelifeexperience.indicator.ViewPagerIndicator
        android:id="@+id/viewPagerIndicator_lifelist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_title_height"
        android:orientation="horizontal"
        app:item_count="2"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_viewpager_lifelist"
        android:layout_below="@+id/viewPagerIndicator_lifelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
