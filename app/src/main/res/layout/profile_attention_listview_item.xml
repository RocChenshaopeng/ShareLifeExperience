<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/profile_attention_listview_minheight"
    android:id="@+id/profile_attention_list_itme_id"
    android:layout_marginTop="@dimen/listview_item_margen_top"
    android:background="@color/colorWhite">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_attention_list_item_image"
        android:layout_marginStart="@dimen/profile_attention_margen_left"
        android:layout_width="@dimen/profile_author_icon_background_size"
        android:layout_height="@dimen/profile_author_icon_background_size"
        android:src="@drawable/ic_tab_profile_normal"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/leshareThemeColor"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_attention_list_item_image"
        android:layout_marginLeft="@dimen/profile_attention_margen_left"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/profile_attention_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="title"/>

        <TextView
            android:id="@+id/profile_attention_list_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/listview_item_margen_top"
            android:textColor="@android:color/black"
            android:layout_below="@id/profile_attention_list_item_title"
            android:maxLines="2"
            android:text="summarysummarysummarys"/>

    </RelativeLayout>

</RelativeLayout>
