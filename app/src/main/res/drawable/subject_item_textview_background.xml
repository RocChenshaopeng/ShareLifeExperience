<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/conner_radius_toast"/>
            <stroke
                android:width="@dimen/search_view_stroke_width"
                android:color="@color/leshareThemeColor"/>
