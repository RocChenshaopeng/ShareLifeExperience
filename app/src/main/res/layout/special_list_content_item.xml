<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/special_content_cardview_id"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    >

    <LinearLayout
        android:layout_width= "match_parent"
        android:layout_height = "match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/special_content_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Content Title"/>

        <TextView
            android:id="@+id/special_content_summary_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Content Summary Content Summary Content Summary Content Summary Content Summary Content Summary "
            android:textSize="15sp"
            android:maxLines="3"/>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/special_content_image_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/special_content_author_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#ffffff"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_tab_profile_normal"/>
            <TextView
                android:id="@+id/special_content_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/special_content_author_image"
                android:layout_centerVertical="true"
                android:text="author_name"
                android:textColor="#5B5B5B"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/special_content_type_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="content_type"
                android:textColor="#5B5B5B"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_article_love_pressed"/>
                    <TextView
                        android:id="@+id/special_content_love_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99"
                        android:textColor="#5B5B5B"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_article_love_pressed"/>
                    <TextView
                        android:id="@+id/special_content_comment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="88"
                        android:textColor="#5B5B5B"
                        android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
