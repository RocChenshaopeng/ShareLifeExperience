<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:id="@+id/hpfrag_item_left"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hp_timeline_item_image_type"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/leshareThemeColor"
            app:civ_border_width="1dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/hpfrag_item_left_action"
            android:text="fabiao"
            android:layout_above="@+id/hp_timeline_item_image_type"
            style="@style/TimeLine_Left_TextView"
            />
        <TextView
            android:id="@+id/hpfrag_item_left_action_time"
            android:text="@string/timeline_listview_item_text"
            android:layout_below="@id/hp_timeline_item_image_type"
            style="@style/TimeLine_Left_TextView"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hpfrg_item_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/hpfrag_item_left"
        android:layout_marginTop="@dimen/listview_item_margen_top"
        android:layout_marginBottom="@dimen/listview_item_margen_bottom"
        android:background="@drawable/timeline_content">
        <TextView
            android:id="@+id/hpfrag_item_title"
            style="@style/ListView_Title_TextView"
            android:layout_centerVertical="true"
            android:text="XXXXXXXXXXXX"/>
        <TextView
            android:id="@+id/hpfrag_item_summary"
            style="@style/ListView_Summary_TextView"
            android:layout_below="@+id/hpfrag_item_title"
            android:maxLines="2"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
    </RelativeLayout>
</RelativeLayout>
